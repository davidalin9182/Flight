	<script>
		document.addEventListener('DOMContentLoaded', function () {
			const sliderWrapper = document.querySelector('.slider-wrapper');
			const prevBtn = document.querySelector('.prev-btn');
			const nextBtn = document.querySelector('.next-btn');
			const imageWidth = sliderWrapper.querySelector('.destinations-slider-item').clientWidth;
			const imagesPerSlide = 1;
			const tilesCount = sliderWrapper.querySelectorAll('.destinations-slider-item').length;
			const lastTile = tilesCount - 5; // set last tile index
			let currentTile = 0;

			prevBtn.addEventListener('click', () => {
				if (currentTile > 0) {
					currentTile = (currentTile - 1) % tilesCount;
				} else {
					currentTile = lastTile;
				}
				sliderWrapper.style.left = -currentTile * imageWidth + 'px';
			});

			nextBtn.addEventListener('click', () => {
				if (currentTile < lastTile) {
					currentTile = (currentTile + 1) % tilesCount;
				} else {
					currentTile = 0;
				}
				sliderWrapper.style.left = -currentTile * imageWidth + 'px';
			});
		});
		
	
	</script>


